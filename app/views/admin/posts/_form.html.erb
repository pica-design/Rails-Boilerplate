
  <div class="row-fluid">
    <div class="span12">
      <div class="col-md-12">
        <div class="page-title">
          <%= link_to '<i class="icon-custom-left"></i>'.html_safe, admin_posts_path %>
          <h3>New <span class="semi-bold">Post</span></h3>
        </div>
      </div>
      <div class="col-md-12">
        <% if @post.errors.any? %>
            <div id="error_explanation">
              <% @post.errors.full_messages.each do |message| %>
                <div class="alert">
                  <button class="close" data-dismiss="alert"></button>
                  <%= message %>
                </div>
              <% end %>
            </div>
          <% end %>
      </div>
      <div class="col-md-9 col-sm-9 col-xs-9">
        <div class="grid simple">
          <div class="grid-title no-border">
            <h4>Post <span class="semi-bold">Title</span></h4>
          </div>
          <div class="grid-body no-border">
            <div class="form-group">
              <div class="controls">
                <input type="text" class="form-control">
              </div>
            </div>
          </div>
        </div>
          <div class="grid simple">
                <div class="grid-title no-border">
                  <h4>Post <span class="semi-bold">Content</span></h4>
                  <div class="tools"> <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                </div>
                <div class="grid-body no-border">
                  <div class="row-fluid">
                    <%= form_for [:admin, @post] do |f| %>
            <textarea id="text-editor" placeholder="Enter text ..." class="form-control" rows="10"></textarea>
            </div>
          </div>
        </div>
        <div class="grid simple">
          <div class="grid-title no-border"><h4>Post <span class="semi-bold">Excerpt</span></h4></div>
          <div class="grid-body no-border">
            <textarea id="text-editor" placeholder="Enter text ..." class="form-control" rows="10"></textarea>
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-3 col-xs-3">
        <div class="grid simple">
          <div class="grid-title no-border"><h4>Post <span class="semi-bold">Status</span></h4></div>
          <div class="grid-body no-border">

            <div class="row">
              <div class="col-md-12">
                <h5>Post <span class="semi-bold">On</span></h5>
                <div class="input-append success date no-padding">
                    <input type="text" class="form-control" id="sandbox-advance" value="<%= DateTime.now.strftime('%m/%d/%Y') %>">
                    <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                  <h5>Post <span class="semi-bold">Status</span></h5>
                  <select id="source" style="width:100%">
                    <option value="draft">Draft</option>
                    <option value="published">Published</option>
                    <option value="pending">Pending Review</option>
                  </select>
                </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="actions">
                  <%= f.submit "Publish", :class => "btn btn-block btn-success btn-cons" %>
                </div>
              </div>

            </div>
          </div>
        </div>
        <div class="grid simple">
          <div class="grid-title no-border"><h4>Post <span class="semi-bold">Categories</span></h4></div>
          <div class="grid-body no-border">
            <select id="multi" style="width:100%" multiple>
              <option value="Jim">Jim</option>
              <option value="John">John</option>
              <option value="Lucy">Lucy</option>
            </select>
          </div>
        </div>
        <% end %>
        <div class="grid simple">
          <div class="grid-title no-border"><h4>Featured <span class="semi-bold">Image</span></h4></div>
          <div class="grid-body no-border">
            <div class="row-fluid">

            <%= form_for @attachment, url: admin_attachments_path, :html => { multipart: true, class: "dropzone"} do |f|  %>
              <div class="fallback">
                <%= f.file_field :file %><br>
                <%= f.submit "Upload" %>
              </div>
            <% end %>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>



